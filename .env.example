# AI Desktop Assistant - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================
# DEVICE CONFIGURATION
# ============================================================

# Processing device: cuda (NVIDIA GPU) or cpu
DEVICE=cuda

# ============================================================
# SPEECH RECOGNITION (STT)
# ============================================================

# Whisper model size: tiny, base, small, medium, large-v2
# Larger = more accurate but slower and more VRAM
STT_MODEL=large-v2

# CPU fallback model (used when CUDA unavailable)
STT_MODEL_CPU=small

# Microphone settings
MIC_DEVICE_INDEX=1
MIC_SAMPLE_RATE=16000

# Push-to-talk mode: hold or toggle
PTT_MODE=toggle

# Maximum recording duration in seconds
PTT_MAX_SECONDS=300

# Minimum confidence threshold for transcription
TRANSCRIBE_CONFIDENCE_THRESHOLD=0.45

# ============================================================
# TEXT-TO-SPEECH (TTS)
# ============================================================

# Piper voice model
TTS_VOICE=en_US-amy-medium

# Speech rate multiplier (1.0 = normal)
TTS_RATE=1.0

# ============================================================
# LOCAL LLM (OLLAMA)
# ============================================================

# Ollama server URL
OLLAMA_URL=http://localhost:11434

# Default model for conversation
OLLAMA_MODEL=mistral:7b-instruct

# Model for coding tasks
OLLAMA_CODE_MODEL=codellama:7b-instruct

# ============================================================
# OPTIONAL: CLOUD API KEYS
# Only needed if using cloud services
# ============================================================

# OpenAI API (optional - for GPT-4)
# OPENAI_API_KEY=sk-your-key-here

# Anthropic API (optional - for Claude)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================================
# AUTONOMY SETTINGS
# ============================================================

# Enable full autonomous mode
FULL_AUTONOMY=true

# Enable self-healing system
SELF_HEAL_ENABLED=true

# Auto-repair on errors
SELF_HEAL_AUTO_REPAIR=true

# Maximum repair attempts before pausing
SELF_HEAL_AUTO_RETRY_LIMIT=3

# Seconds between repair attempts
SELF_HEAL_THROTTLE_SECONDS=60

# Enable autonomous code modifications
AUTONOMOUS_CODER_ENABLED=true

# Enable self-update capability
SELF_UPDATE_ENABLED=true

# ============================================================
# AVATAR SETTINGS
# ============================================================

# Enable avatar display
AVATAR_ENABLED=true

# Avatar model path
AVATAR_MODEL=models/avatar/default.model3.json

# Avatar window always on top
AVATAR_ALWAYS_ON_TOP=true

# ============================================================
# LOGGING
# ============================================================

# Enable debug logging
DEBUG_LOGGING=true

# Log voice transcripts
LOG_TRANSCRIPTS=true

# Log directory
LOG_DIR=logs

# ============================================================
# HOTKEYS
# ============================================================

# Push-to-talk start
HOTKEY_PTT_START=ctrl+alt+space

# Push-to-talk stop
HOTKEY_PTT_STOP=enter

# Toggle listening
HOTKEY_TOGGLE=ctrl+alt+t

# Kill switch (emergency stop)
HOTKEY_KILL=ctrl+alt+k

# Toggle avatar
HOTKEY_AVATAR=ctrl+alt+a
